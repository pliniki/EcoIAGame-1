<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#142A49"
    tools:context=".Tela7">

    <Button
        android:id="@+id/tela7"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="412dp"
        android:layout_height="138dp"
        android:layout_marginTop="132dp"
        android:background="#E4E4E4"
        android:fontFamily="@font/poppins"
        android:text="De onde vem?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#E4E4E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="350dp"
        android:layout_height="134dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/poppins"
        android:lineSpacingExtra="8sp"
        android:text="Vamos descobrir um pouco mais sobre o ciclo de vida dos resíduos. Assista o vídeo a seguir e solucione o último desafio para conquistar sua recompensa."
        android:textColor="#E4E4E4"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tela7"
        app:layout_constraintVertical_bias="0.01" />

    <Button
        android:id="@+id/buttonGo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Continuar"
        android:textColor="#34CB79"
        app:backgroundTint="#142A49"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonBack4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Voltar"
        android:textColor="#34CB79"
        app:backgroundTint="#142A49"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>